<?xml version="1.0"?>
<config>
    <modules>
        <Conekta_Pay>
            <version>0.1.0</version>
        </Conekta_Pay>
    </modules>
    <frontend>
        <routers>
            <pay>
                <use>standard</use>
                <args>
                    <module>Conekta_Pay</module>
                    <frontName>pay</frontName>
                </args>
            </pay>
            <checkout>
                <args>
                <modules>
                <Conekta_Pay before="Mage_Checkout">Conekta_Pay</Conekta_Pay>
                </modules>
                </args>
            </checkout>
        </routers>
        <layout>
            <updates>
                <pay>
                    <file>pay.xml</file>
                </pay>
            </updates>
        </layout>
    </frontend>
    <global>
    	<fieldsets>
    		 <sales_convert_quote_payment>
    		 	<cc_auth_code>
    		 		<to_order_payment>*</to_order_payment>
    		 	</cc_auth_code>
    		 </sales_convert_quote_payment>
    	</fieldsets>
        <models>
            <pay>
                <class>Conekta_Pay_Model</class>
                <resourceModel>pay_mysql4</resourceModel>
            </pay>
            <pay_mysql4>
                <class>Conekta_Pay_Model_Mysql4</class>
                <entities>
                    <pay>
                        <table>pay</table>
                    </pay>
                </entities>
            </pay_mysql4>
        </models>
        <resources>
            <pay_setup>
                <setup>
                    <module>Conekta_Pay</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </pay_setup>
            <pay_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </pay_write>
            <pay_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </pay_read>
        </resources>
        <blocks>
            <pay>
                <class>Conekta_Pay_Block</class>
            </pay>
        </blocks>
        <helpers>
            <pay>
                <class>Conekta_Pay_Helper</class>
            </pay>
        </helpers>
    </global>
    <default>
        <payment>
            <pay>
                <active>1</active>
                <model>pay/pay</model>
                <order_status>processing</order_status>
                <title>Conekta Payment Method</title>
                <message></message>
            </pay>
         </payment>
    </default>
</config>
