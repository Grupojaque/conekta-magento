<?xml version="1.0"?>
<config>
    <modules>
        <Conekta_Tarjeta>
            <version>0.1.0</version>
        </Conekta_Tarjeta>
    </modules>
    <frontend>
        <routers>
            <tarjeta>
                <use>standard</use>
                <args>
                    <module>Conekta_Tarjeta</module>
                    <frontName>tarjeta</frontName>
                </args>
            </tarjeta>
            <checkout>
                <args>
                <modules>
                <Conekta_Tarjeta before="Mage_Checkout">Conekta_Tarjeta</Conekta_Tarjeta>
                </modules>
                </args>
            </checkout>
        </routers>
        <layout>
            <updates>
                <tarjeta>
                    <file>tarjeta.xml</file>
                </tarjeta>
            </updates>
        </layout>
    </frontend>
    <global>
    	<fieldsets>
    		 <sales_convert_quote_payment>
				 <cc_number>
    		 		<to_order_payment>*</to_order_payment>
    		 	</cc_number>
    		 	<cc_owner>
    		 		<to_order_payment>*</to_order_payment>
    		 	</cc_owner>
    		 	<cc_exp_month>
    		 		<to_order_payment>*</to_order_payment>
    		 	</cc_exp_month>
    		 	<cc_exp_year>
    		 		<to_order_payment>*</to_order_payment>
    		 	</cc_exp_year>
    		 </sales_convert_quote_payment>
    	</fieldsets>
        <models>
            <tarjeta>
                <class>Conekta_Tarjeta_Model</class>
                <resourceModel>tarjeta_mysql4</resourceModel>
            </tarjeta>
            <tarjeta_mysql4>
                <class>Conekta_Tarjeta_Model_Mysql4</class>
                <entities>
                    <tarjeta>
                        <table>tarjeta</table>
                    </tarjeta>
                </entities>
            </tarjeta_mysql4>
        </models>
        <resources>
            <tarjeta_setup>
                <setup>
                    <module>Conekta_Tarjeta</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </tarjeta_setup>
            <tarjeta_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </tarjeta_write>
            <tarjeta_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </tarjeta_read>
        </resources>
        <blocks>
            <tarjeta>
                <class>Conekta_Tarjeta_Block</class>
            </tarjeta>
        </blocks>
        <helpers>
            <tarjeta>
                <class>Conekta_Tarjeta_Helper</class>
            </tarjeta>
        </helpers>
    </global>
    <default>
        <payment>
            <tarjeta>
                <active>1</active>
                <model>tarjeta/tarjeta</model>
                <order_status>processing</order_status>
                <title>Pago con Tarjeta</title>
                <message></message>
            </tarjeta>
         </payment>
    </default>
</config>
