<?xml version="1.0"?>
<layout version="0.1.0">
	<ficha_ajax_index>
		<block type="ficha/ficha" name="ficha" template="ficha/ficha.phtml" />
	</ficha_ajax_index>
    <checkout_onepage_index> <!-- Adding our new step to onepage block  -->
    	<reference name='checkout.onepage'>
    		 <action method='setTemplate'><template>ficha/checkout/onepage.phtml</template></action>
    		 <block type="ficha/checkout_onepage_ficha" name="checkout.onepage.ficha" as="ficha" template="ficha/checkout/onepage/ficha.phtml">
    		 		<block type="ficha/checkout_onepage_ficha" name="checkout.onepage.ficha.info" as="ficha.info" template="ficha/checkout/onepage/ficha/info.phtml" />
    		 </block>
    	</reference>
    	<reference name='checkout.progress'> <!-- Change the template of progress block -->
    	      <action method='setTemplate'><template>ficha/checkout/onepage/progress.phtml</template></action>
    	</reference>
    </checkout_onepage_index>
    <checkout_onepage_progress>  <!-- Change the template of progress block -->
    	<reference name='root'>
    		<action method='setTemplate'><template>ficha/checkout/onepage/progress.phtml</template></action>
    	</reference>
    </checkout_onepage_progress>
    
    <checkout_onepage_ficha>
        <!-- Mage_Checkout -->
        <remove name="right"/>
        <remove name="left"/>

        <block type="ficha/checkout_onepage_ficha" name="root" output="toHtml" template="ficha/checkout/onepage/ficha/info.phtml"/>
    </checkout_onepage_ficha>
    
</layout> 
