<?xml version="1.0"?>
<config>
    <modules>
        <Conekta_Oxxo>
            <version>0.1.0</version>
        </Conekta_Oxxo>
    </modules>
    <frontend>
        <routers>
            <oxxo>
                <use>standard</use>
                <args>
                    <module>Conekta_Oxxo</module>
                    <frontName>oxxo</frontName>
                </args>
            </oxxo>
            <checkout>
                <args>
                <modules>
					<Conekta_Oxxo before="Mage_Checkout">Conekta_Oxxo</Conekta_Oxxo>
                </modules>
                </args>
            </checkout>
        </routers>
        <layout>
            <updates>
                <oxxo>
                    <file>oxxo.xml</file>
                </oxxo>
            </updates>
        </layout>
    </frontend>
    <global>
    	<fieldsets>
    		 <sales_convert_quote_payment>
				 <codigo_barras>
    		 		<to_order_payment>*</to_order_payment>
    		 	</codigo_barras>
    		 </sales_convert_quote_payment>
    	</fieldsets>
        <models>
            <oxxo>
                <class>Conekta_Oxxo_Model</class>
                <resourceModel>oxxo_mysql4</resourceModel>
            </oxxo>
            <oxxo_mysql4>
                <class>Conekta_Oxxo_Model_Mysql4</class>
                <entities>
                    <oxxo>
                        <table>oxxo</table>
                    </oxxo>
                </entities>
            </oxxo_mysql4>
        </models>
        <resources>
            <oxxo_setup>
                <setup>
                    <module>Conekta_Oxxo</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </oxxo_setup>
            <oxxo_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </oxxo_write>
            <oxxo_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </oxxo_read>
        </resources>
        <blocks>
            <oxxo>
                <class>Conekta_Oxxo_Block</class>
            </oxxo>
        </blocks>
        <helpers>
            <oxxo>
                <class>Conekta_Oxxo_Helper</class>
            </oxxo>
        </helpers>
    </global>
    <default>
        <payment>
            <oxxo>
                <active>1</active>
                <model>oxxo/oxxo</model>
                <order_status>processing</order_status>
                <title>Pago con Oxxo</title>
                <message></message>
            </oxxo>
         </payment>
    </default>
</config>
